# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# AWS Configuration
aws_profile  = "your-aws-profile-name"  # REQUIRED: AWS profile from ~/.aws/credentials
aws_region   = "us-west-2"
environment  = "dev"
project_name = "allowability"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# Application Configuration
container_port = 8080
image_tag      = "latest"

# ECS Configuration
ecs_task_cpu      = 256  # 0.25 vCPU
ecs_task_memory   = 512  # 512 MB
ecs_desired_count = 2    # Number of tasks

# Logging
log_retention_days = 7

# Service Toggle
# Set to false initially, then true after pushing Docker image to ECR
enable_service = false
